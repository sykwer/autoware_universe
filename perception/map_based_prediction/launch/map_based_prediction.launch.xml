<?xml version="1.0"?>
<launch>
  <arg name="param_path" default="$(find-pkg-share map_based_prediction)/config/map_based_prediction.param.yaml"/>

  <arg name="vector_map_topic" default="/map/vector_map"/>
  <arg name="output_topic" default="objects"/>

  <node_container pkg="rclcpp_component_container_callback_isolated" exec="component_container_callback_isolated" name="map_based_prediction_container" namespace="">
    <composable_node pkg="map_based_prediction" plugin="map_based_prediction::MapBasedPredictionNode" name="map_based_prediction" namespace="">
      <param from="$(var param_path)"/>
      <remap from="/vector_map" to="$(var vector_map_topic)"/>
      <remap from="objects" to="$(var output_topic)"/>
    </composable_node>
  </node_container>
</launch>
